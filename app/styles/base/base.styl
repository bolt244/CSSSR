*
	border none
	
body
	height 2000px
	color #2f1b15
	font-family 'PT Sans', sans-serif
	font-size 22.43px
	font-weight bold
	background-color #797979
	cursor default

	+to-width(540px)
		padding-top 0
		padding-bottom 0

.main
	margin-left auto
	margin-right auto
	max-width 1000px
	background-image url(../images/bg.png)

	+to-width(540px)
		padding-top 40px
		padding-bottom 40px
		border-radius 0
		box-shadow none

.h1
	margin-left -20px
	margin-right -20px
	margin-bottom 20px
	padding 20px
	font-size 28px
	font-weight bold
	text-align center

.h2
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.h3
	margin-bottom 10px
	padding-left 20px
	padding-right 20px
	font-size 18px
	font-weight bold

	+to-width(540px)
		text-align center
		
a
	color #014f98
